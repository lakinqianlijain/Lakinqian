<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <com.code.common.ZXingView
        android:id="@+id/zv_scan_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:qrcv_animTime="1000"
        app:qrcv_borderColor="#ddffffff"
        app:qrcv_borderSize="1dp"
        app:qrcv_cornerColor="@color/green1"
        app:qrcv_cornerDisplayType="inside"
        app:qrcv_cornerLength="20dp"
        app:qrcv_cornerSize="5dp"
        app:qrcv_isAutoZoom="true"
        app:qrcv_isOnlyDecodeScanBoxArea="false"
        app:qrcv_isShowLocationPoint="true"
        app:qrcv_isTipTextBelowRect="true"
        app:qrcv_maskColor="#33FFFFFF"
        app:qrcv_qrCodeTipText="将二维码/条码放入框内，即可自动扫描"
        app:qrcv_rectWidth="200dp"
        app:qrcv_scanLineColor="@color/green1"
        app:qrcv_scanLineSize="1dp"
        app:qrcv_tipTextColor="@android:color/white"
        app:qrcv_tipTextMargin="20dp"
        app:qrcv_tipTextSize="12dp"
        app:qrcv_verticalBias="0.5" />

    <TextView
        android:id="@+id/tv_scan_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:text="result"
        android:textColor="@color/colorAccent"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_control_flash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawablePadding="4dp"
        android:drawableTop="@drawable/soc_ic_flashlight"
        android:text="Touch and light up"
        android:textColor="#DEFFFFFF"
        android:textSize="12dp"
        android:visibility="invisible"
        tools:visibility="visible" />
</FrameLayout>