<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qlj.lakinqiandemo.MainActivity">

    <RelativeLayout
        android:id="@+id/first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/reflection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="反射" />

        <Button
            android:id="@+id/hook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/reflection"
            android:text="HOOK" />

        <Button
            android:id="@+id/mvp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/hook"
            android:text="MVP" />

        <Button
            android:id="@+id/animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mvp"
            android:text="ANIMATION" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first">

        <Button
            android:id="@+id/contralayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="contralayout" />

        <Button
            android:id="@+id/lock_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LockPage"
            android:layout_toRightOf="@+id/contralayout"/>

        <Button
            android:id="@+id/video_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/lock_page"
            android:text="Video"
            android:layout_toRightOf="@+id/lock_page" />
    </RelativeLayout>

</RelativeLayout>
