<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="downloading_def_style">@style/DownloadingDefStyleAttrImpl</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Style.VideoSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:maxHeight">2dp</item>
        <item name="android:progressDrawable">@drawable/bg_progress_orange</item>
    </style>

    <style name="Style.VideoSpeedSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:maxHeight">7dp</item>
        <item name="android:progressDrawable">@drawable/bg_progress_blue</item>
    </style>

    <style name="DownloadingDefStyleAttrImpl">
        <item name="arrow_color">@color/arrow_color</item>
        <item name="loading_circle_back_color">@color/loading_circle_back_color</item>
        <item name="loading_line_color">@color/loading_line_color</item>
        <item name="progress_line_color">@color/progress_line_color</item>
        <item name="progress_text_color">@color/progress_text_color</item>
        <item name="done_text_color">@color/done_text_color</item>
    </style>

    <declare-styleable name="ExpandableTextView">
        <attr name="maxCollapsedLines" format="integer" />
        <attr name="animDuration" format="integer" />
        <attr name="animAlphaStart" format="float" />
        <attr name="expandIndicator" format="reference" />
        <attr name="collapseIndicator" format="reference" />
        <attr name="expandToggleType" format="enum">
            <enum name="ImageButton" value="0" />
            <enum name="TextView" value="1" />
        </attr>
        <attr name="expandableTextId" format="reference" />
        <attr name="expandCollapseToggleId" format="reference" />
        <attr name="expandToggleOnTextClick" format="boolean" />
    </declare-styleable>
</resources>
