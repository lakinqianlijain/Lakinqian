<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Style.VideoSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:maxHeight">2dp</item>
        <item name="android:progressDrawable">@drawable/bg_progress_orange</item>
    </style>

    <style name="Style.VideoSpeedSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:maxHeight">7dp</item>
        <item name="android:progressDrawable">@drawable/bg_progress_blue</item>
    </style>
</resources>
